---
const {
  href,
  variant = "primary", // primary | ghost
  class: className = "",
  type = "button",
  id,
  ...rest
} = Astro.props;

const base =
  "inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium transition focus:outline-none";

const variants = {
  primary:
    "border border-[rgb(var(--border))] bg-black text-white hover:bg-black/90",
  ghost:
    "border border-[rgb(var(--border))] bg-white text-[rgb(var(--text))] hover:bg-black/5",
};

const isCalc = id === "calcBtn";
const calcClasses = isCalc ? " min-w-[120px] justify-center" : "";
const classes = `${base} ${variants[variant] ?? variants.primary} ${className}${calcClasses}`;
---

{href ? (
  <a href={href} class={classes} id={id} {...rest}>
    {isCalc ? (
      <>
        <span data-calc-label>
          <slot />
        </span>
        <span
          data-calc-spinner
          class="hidden h-4 w-4 animate-spin rounded-full border-2 border-white/40 border-t-white"
          aria-hidden="true"
        ></span>
      </>
    ) : (
      <slot />
    )}
  </a>
) : (
  <button type={type} class={classes} id={id} {...rest}>
    {isCalc ? (
      <>
        <span data-calc-label>
          <slot />
        </span>
        <span
          data-calc-spinner
          class="hidden h-4 w-4 animate-spin rounded-full border-2 border-white/40 border-t-white"
          aria-hidden="true"
        ></span>
      </>
    ) : (
      <slot />
    )}
  </button>
)}
