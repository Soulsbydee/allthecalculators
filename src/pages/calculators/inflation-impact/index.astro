---
import Layout from "../../../layouts/Layout.astro";
import Card from "../../../components/Card.astro";
import Input from "../../../components/Input.astro";
import Button from "../../../components/Button.astro";

const title = "Inflation impact calculator (UK) — All The Calculators";
const description =
  "Estimate how inflation can change purchasing power over time.";
---

<Layout title={title} description={description}>
  <div class="space-y-6">
    <header>
      <h1 class="text-2xl font-semibold tracking-tight">Inflation impact</h1>
      <p class="mt-2 text-sm text-[rgb(var(--muted))] max-w-2xl">
        Estimate how inflation affects purchasing power and what an amount today may be worth in real terms over time.
      </p>
    </header>

    <section class="inputs-container space-y-4" aria-label="Inflation impact inputs">
      <div class="inputs-grid">
        <div>
          <Input id="amount" label="Amount today (£)" type="number" inputmode="decimal" min="0" step="0.01" placeholder="e.g. 10000" />
          <p id="amount-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>
        <div>
          <Input id="inflation" label="Inflation rate (%)" type="number" inputmode="decimal" min="0" step="0.01" placeholder="e.g. 3.0" />
          <p id="inflation-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>
        <div>
          <Input id="years" label="Time period (years)" type="number" inputmode="numeric" min="1" step="1" placeholder="e.g. 10" />
          <p id="years-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>
        <div>
          <Input id="growth" label="Expected nominal growth (%)" type="number" inputmode="decimal" min="0" step="0.01" placeholder="Optional" />
          <p id="growth-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>
      </div>

      <div class="flex flex-wrap gap-3 pt-1">
        <Button type="button" id="calcBtn">Calculate</Button>
        <Button type="button" variant="ghost" id="resetBtn">Reset</Button>
      </div>
    </section>

    <hr class="border-t border-[rgb(var(--border))]" />

    <section aria-label="Inflation impact results" class="space-y-4">
      <header>
        <h2 class="text-[18px] font-semibold tracking-tight">Results</h2>
        <p class="mt-1 text-[14px] text-[rgb(var(--muted))]">These are estimates based on your inputs.</p>
      </header>
      <div class="results-grid" role="status" aria-live="polite" aria-atomic="true">
        <Card>
          <div class="text-xs font-medium uppercase tracking-wide text-[rgb(var(--muted))]">Future price equivalent</div>
          <div class="mt-1 text-[18px] font-semibold tracking-tight" id="futureCost">—</div>
          <div class="mt-1 text-xs text-[rgb(var(--muted))]">Amount needed in future to match today's buying power</div>
        </Card>
        <Card>
          <div class="text-xs font-medium uppercase tracking-wide text-[rgb(var(--muted))]">Real value of amount</div>
          <div class="mt-1 text-[18px] font-semibold tracking-tight" id="realValue">—</div>
          <div class="mt-1 text-xs text-[rgb(var(--muted))]">Purchasing power after inflation</div>
        </Card>
        <Card>
          <div class="text-xs font-medium uppercase tracking-wide text-[rgb(var(--muted))]">Real return rate</div>
          <div class="mt-1 text-[18px] font-semibold tracking-tight" id="realRate">—</div>
          <div class="mt-1 text-xs text-[rgb(var(--muted))]">Nominal growth adjusted for inflation</div>
        </Card>
      </div>
    </section>

    <hr class="border-t border-[rgb(var(--border))]" />

    <section class="max-w-2xl" aria-label="How this calculator works">
      <details class="group">
        <summary class="flex cursor-pointer list-none items-center gap-2 py-2 text-sm font-semibold tracking-tight focus:outline-none focus-visible:ring-2 focus-visible:ring-black/20 rounded-lg">
          <span class="inline-flex h-4 w-4 items-center justify-center text-[rgb(var(--muted))] transition-transform group-open:rotate-90" aria-hidden="true">
            <svg viewBox="0 0 20 20" width="16" height="16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.25 4.75L12.75 10L7.25 15.25" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </span>
          <span>How this calculator works</span>
        </summary>
        <div class="pt-2 pl-6 space-y-2 text-sm text-[rgb(var(--muted))]">
          <p>
            Future cost equivalent = amount today multiplied by (1 + inflation rate) to the power of years.
          </p>
          <p>
            Real return rate uses the Fisher-style adjustment: (1 + nominal growth) divided by (1 + inflation) minus 1.
          </p>
        </div>
      </details>
    </section>

    <section class="max-w-2xl space-y-6" aria-label="Inflation guide">
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">What this calculator does</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          This inflation impact calculator estimates how rising prices can erode purchasing power over time.
        </p>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          It also shows how a nominal growth rate compares to inflation in real terms.
        </p>
      </div>
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">How the formula works</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          We compound inflation over the selected years to estimate the future amount needed to buy the same goods and
          services. If you enter a growth rate, we adjust it for inflation to estimate real return.
        </p>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          This helps separate headline growth from actual improvement in buying power.
        </p>
      </div>
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">Worked example</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          Example: £10,000 today, 3% inflation, 10 years. You would need roughly £13,439 in 10 years to match today's
          purchasing power.
        </p>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          If nominal growth is 5%, the real rate is about 1.94% after inflation.
        </p>
      </div>
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">Common mistakes</h2>
        <ul class="mt-2 list-disc pl-5 text-sm text-[rgb(var(--muted))] space-y-1">
          <li>Comparing nominal growth without adjusting for inflation.</li>
          <li>Using short-term inflation spikes as long-term assumptions.</li>
          <li>Ignoring taxes and fees when estimating real returns.</li>
          <li>Assuming one inflation rate fits all spending categories.</li>
        </ul>
      </div>
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">When to use this calculator</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          Use this for long-term savings goals, pension planning, and understanding whether investment growth is beating
          inflation.
        </p>
      </div>
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">FAQs</h2>
        <div class="mt-2 space-y-3 text-sm text-[rgb(var(--muted))]">
          <div>
            <h3 class="font-semibold text-[rgb(var(--text))]">Is this based on CPI or RPI?</h3>
            <p class="mt-1">It uses the rate you enter, so you can model CPI, RPI, or your own assumption.</p>
          </div>
          <div>
            <h3 class="font-semibold text-[rgb(var(--text))]">Can inflation be negative?</h3>
            <p class="mt-1">This version assumes non-negative inflation input for simplicity.</p>
          </div>
          <div>
            <h3 class="font-semibold text-[rgb(var(--text))]">Does this include tax?</h3>
            <p class="mt-1">No. Tax and fees may reduce real returns further.</p>
          </div>
        </div>
      </div>
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">Related calculators</h2>
        <ul class="mt-2 list-disc pl-5 text-sm text-[rgb(var(--muted))] space-y-1">
          <li><a class="underline" href="/calculators/compound-interest">Compound interest calculator</a></li>
          <li><a class="underline" href="/calculators/savings-growth">Savings growth calculator</a></li>
          <li><a class="underline" href="/calculators/savings-goal">Savings goal calculator</a></li>
        </ul>
      </div>
    </section>
  </div>

  <script is:inline>
    const fmtGBP = new Intl.NumberFormat("en-GB", { style: "currency", currency: "GBP" });
    const fmtPct = new Intl.NumberFormat("en-GB", { maximumFractionDigits: 2 });

    const fields = {
      amount: document.getElementById("amount"),
      inflation: document.getElementById("inflation"),
      years: document.getElementById("years"),
      growth: document.getElementById("growth"),
    };
    const errors = {
      amount: document.getElementById("amount-error"),
      inflation: document.getElementById("inflation-error"),
      years: document.getElementById("years-error"),
      growth: document.getElementById("growth-error"),
    };

    function setBlankResults() {
      document.getElementById("futureCost").textContent = "—";
      document.getElementById("realValue").textContent = "—";
      document.getElementById("realRate").textContent = "—";
    }

    function showError(key, msg) {
      const input = fields[key];
      const err = errors[key];
      if (!input || !err) return;
      input.setAttribute("aria-invalid", "true");
      input.classList.add("border-red-500");
      err.textContent = msg;
      err.classList.remove("hidden");
    }

    function clearError(key) {
      const input = fields[key];
      const err = errors[key];
      if (!input || !err) return;
      input.removeAttribute("aria-invalid");
      input.classList.remove("border-red-500");
      err.textContent = "";
      err.classList.add("hidden");
    }

    function parseNumber(el) {
      const v = String(el?.value ?? "").trim();
      if (v === "") return null;
      const n = Number(v);
      return Number.isFinite(n) ? n : null;
    }

    function calculate() {
      ["amount","inflation","years","growth"].forEach(clearError);
      const amount = parseNumber(fields.amount);
      const inflation = parseNumber(fields.inflation);
      const years = parseNumber(fields.years);
      const growth = parseNumber(fields.growth) ?? 0;
      let first = null;

      if (amount === null || amount <= 0) { showError("amount", "Enter an amount greater than 0."); first ??= fields.amount; }
      if (inflation === null || inflation < 0 || inflation > 100) { showError("inflation", "Enter inflation between 0 and 100%."); first ??= fields.inflation; }
      if (years === null || years <= 0 || !Number.isInteger(years)) { showError("years", "Enter whole years (at least 1)."); first ??= fields.years; }
      if (growth < 0 || growth > 100) { showError("growth", "Enter growth between 0 and 100%."); first ??= fields.growth; }
      if (first) { setBlankResults(); first.focus(); return; }

      const inf = inflation / 100;
      const gr = growth / 100;

      const futureCost = amount * Math.pow(1 + inf, years);
      const realValue = amount / Math.pow(1 + inf, years);
      const realRate = ((1 + gr) / (1 + inf) - 1) * 100;

      document.getElementById("futureCost").textContent = fmtGBP.format(futureCost);
      document.getElementById("realValue").textContent = fmtGBP.format(realValue);
      document.getElementById("realRate").textContent = `${fmtPct.format(realRate)}%`;
    }

    function reset() {
      ["amount","inflation","years","growth"].forEach((k) => {
        fields[k].value = "";
        clearError(k);
      });
      setBlankResults();
      fields.amount?.focus();
    }

    ["amount","inflation","years","growth"].forEach((k) => fields[k]?.addEventListener("input", () => clearError(k)));

    const calcBtn = document.getElementById("calcBtn");
    const calcLabel = calcBtn?.querySelector("[data-calc-label]");
    const calcSpinner = calcBtn?.querySelector("[data-calc-spinner]");

    function setLoading(isLoading) {
      if (!calcBtn) return;
      calcBtn.disabled = isLoading;
      calcBtn.setAttribute("aria-busy", isLoading ? "true" : "false");
      calcBtn.classList.toggle("opacity-70", isLoading);
      calcBtn.classList.toggle("cursor-not-allowed", isLoading);
      calcSpinner?.classList.toggle("hidden", !isLoading);
      calcLabel?.classList.toggle("sr-only", isLoading);
    }

    calcBtn?.addEventListener("click", () => {
      if (calcBtn.disabled) return;
      setLoading(true);
      window.setTimeout(() => {
        calculate();
        setLoading(false);
      }, 1000);
    });
    document.getElementById("resetBtn")?.addEventListener("click", reset);

    setBlankResults();
  </script>
</Layout>
