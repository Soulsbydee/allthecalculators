---
import Layout from "../../../layouts/Layout.astro";
import Card from "../../../components/Card.astro";
import Input from "../../../components/Input.astro";
import Button from "../../../components/Button.astro";

const title = "Height converter (UK) — All The Calculators";
const description = "Convert height between cm and ft/in.";
---

<Layout title={title} description={description}>
  <div class="space-y-6">
    <header>
      <h1 class="text-2xl font-semibold tracking-tight">Height converter</h1>
      <p class="mt-2 text-sm text-[rgb(var(--muted))] max-w-2xl">
        Convert height between metric (cm) and UK units (ft/in). Enter either format and press Calculate.
      </p>
    </header>

    <!-- Inputs -->
    <section class="inputs-container space-y-4" aria-label="Height converter inputs">
      <div class="inputs-grid">
        <div class="md:col-span-2">
          <Input
            id="cm"
            label="Height (cm)"
            type="number"
            inputmode="decimal"
            min="0"
            step="0.1"
            placeholder="e.g. 175"
          />
          <p id="cm-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>

        <div>
          <Input
            id="ft"
            label="Height (ft)"
            type="number"
            inputmode="numeric"
            min="0"
            step="1"
            placeholder="e.g. 5"
          />
          <p id="ft-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>

        <div>
          <Input
            id="inch"
            label="Height (in)"
            type="number"
            inputmode="numeric"
            min="0"
            step="1"
            placeholder="e.g. 9"
          />
          <p id="inch-error" class="mt-1 hidden text-xs text-red-600"></p>
        </div>
      </div>

      <div class="flex flex-wrap gap-3 pt-1">
        <Button type="button" id="calcBtn">Calculate</Button>
        <Button type="button" variant="ghost" id="resetBtn">Reset</Button>
      </div>

      <p class="text-xs text-[rgb(var(--muted))]">
        Tip: You only need to fill in one format (cm or ft/in).
      </p>
    </section>

    <!-- Divider -->
    <hr class="border-t border-[rgb(var(--border))]" />

    <!-- Results -->
    <section aria-label="Height converter results" class="space-y-4">
      <header>
        <h2 class="text-[18px] font-semibold tracking-tight">Results</h2>
        <p class="mt-1 text-[14px] text-[rgb(var(--muted))]">These are estimates based on your inputs.</p>
      </header>

      <div class="results-grid" role="status" aria-live="polite" aria-atomic="true">
        <Card>
          <div class="text-xs font-medium uppercase tracking-wide text-[rgb(var(--muted))]">Height (cm)</div>
          <div class="mt-1 text-[18px] font-semibold tracking-tight" id="resCm">—</div>
          <div class="mt-1 text-xs text-[rgb(var(--muted))]">Metric</div>
        </Card>

        <Card>
          <div class="text-xs font-medium uppercase tracking-wide text-[rgb(var(--muted))]">Height (ft/in)</div>
          <div class="mt-1 text-[18px] font-semibold tracking-tight" id="resFtIn">—</div>
          <div class="mt-1 text-xs text-[rgb(var(--muted))]">UK units</div>
        </Card>
      </div>
    </section>

    <!-- Divider -->
    <hr class="border-t border-[rgb(var(--border))]" />

    <!-- How it works (accordion) -->
    <section class="max-w-2xl" aria-label="How this calculator works">
      <details class="group">
        <summary
          class="flex cursor-pointer list-none items-center gap-2 py-2 text-sm font-semibold tracking-tight focus:outline-none focus-visible:ring-2 focus-visible:ring-black/20 rounded-lg"
        >
          <span
            class="inline-flex h-4 w-4 items-center justify-center text-[rgb(var(--muted))] transition-transform group-open:rotate-90"
            aria-hidden="true"
          >
            <svg viewBox="0 0 20 20" width="16" height="16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.25 4.75L12.75 10L7.25 15.25" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </span>
          <span>How this calculator works</span>
        </summary>

        <div class="pt-2 pl-6 space-y-2 text-sm text-[rgb(var(--muted))]">
          <p>
            We use standard conversions: 1 inch = 2.54 cm and 1 foot = 12 inches.
            Results may vary slightly due to rounding.
          </p>
        </div>
      </details>
    </section>

    <section class="max-w-2xl space-y-6" aria-label="Height converter guide">
      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">What this calculator does</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          This height converter switches between centimetres (cm) and UK feet/inches (ft/in). Enter either format and
          the calculator converts to the other so you can compare medical forms, fitness plans, or personal records.
        </p>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          It provides a quick conversion without manual calculations.
        </p>
      </div>

      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">How the formula works</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          We use standard conversions: 1 inch equals 2.54 cm, and 1 foot equals 12 inches. We convert your input into a
          base unit, then format it for the other system.
        </p>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          Results are rounded to keep output readable, so tiny differences can occur when converting back and forth.
        </p>
      </div>

      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">Worked example</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          Example: 175 cm converts to about 5 ft 9 in. Entering 5 ft 9 in gives roughly 175 cm.
        </p>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          Slight rounding differences are normal.
        </p>
      </div>

      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">Common mistakes</h2>
        <ul class="mt-2 list-disc pl-5 text-sm text-[rgb(var(--muted))] space-y-1">
          <li>Entering inches in the feet field.</li>
          <li>Leaving both cm and ft/in blank.</li>
          <li>Using decimal feet instead of inches.</li>
          <li>Expecting a perfect round-trip after rounding.</li>
        </ul>
      </div>

      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">When to use this calculator</h2>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">
          Use this when converting between UK and metric height units for health records, fitness plans, or general
          reference. For weight conversions, use the Weight converter.
        </p>
      </div>

      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">FAQs</h2>
        <div class="mt-2 space-y-3 text-sm text-[rgb(var(--muted))]">
          <div>
            <h3 class="font-semibold text-[rgb(var(--text))]">How many cm in a foot?</h3>
            <p class="mt-1">
              One foot is 12 inches, which equals 30.48 cm.
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-[rgb(var(--text))]">Can I enter decimals in feet?</h3>
            <p class="mt-1">
              You can, but the common UK format is feet and inches. Use the inches field for precision.
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-[rgb(var(--text))]">Why are results slightly different between tools?</h3>
            <p class="mt-1">
              Differences usually come from rounding rules or decimal precision.
            </p>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-[18px] font-semibold tracking-tight">Related calculators</h2>
        <ul class="mt-2 list-disc pl-5 text-sm text-[rgb(var(--muted))] space-y-1">
          <li><a class="underline" href="/calculators/weight-converter">Weight converter</a></li>
          <li><a class="underline" href="/calculators/daily-calorie-needs">Daily calorie needs calculator</a></li>
          <li><a class="underline" href="/calculators/percentage-calculator">Percentage calculator</a></li>
        </ul>
      </div>
    </section>
  </div>

  <script is:inline>
    const $ = (id) => document.getElementById(id);

    const fields = {
      cm: $("cm"),
      ft: $("ft"),
      inch: $("inch"),
    };

    const errors = {
      cm: $("cm-error"),
      ft: $("ft-error"),
      inch: $("inch-error"),
    };

    function setBlankResults() {
      $("resCm").textContent = "—";
      $("resFtIn").textContent = "—";
    }

    function showError(key, msg) {
      const el = fields[key];
      const err = errors[key];
      if (!el || !err) return;

      el.setAttribute("aria-invalid", "true");
      el.setAttribute("aria-describedby", `${key}-error`);
      el.classList.add("border-red-500");
      err.textContent = msg;
      err.classList.remove("hidden");
    }

    function clearError(key) {
      const el = fields[key];
      const err = errors[key];
      if (!el || !err) return;

      el.removeAttribute("aria-invalid");
      if (el.getAttribute("aria-describedby") === `${key}-error`) el.removeAttribute("aria-describedby");
      el.classList.remove("border-red-500");
      err.textContent = "";
      err.classList.add("hidden");
    }

    function parseNumber(el) {
      const v = String(el?.value ?? "").trim();
      if (v === "") return null;
      const n = Number(v);
      return Number.isFinite(n) ? n : null;
    }

    function validate() {
      ["cm","ft","inch"].forEach(clearError);

      const cm = parseNumber(fields.cm);
      const ft = parseNumber(fields.ft);
      const inch = parseNumber(fields.inch);

      const hasMetric = cm !== null;
      const hasUK = ft !== null || inch !== null;

      if (!hasMetric && !hasUK) {
        showError("cm", "Enter a height in cm or ft/in.");
        return { valid: false, firstInvalid: fields.cm };
      }

      if (hasMetric) {
        if (cm <= 0) return (showError("cm", "Enter a height greater than 0."), { valid: false, firstInvalid: fields.cm });
        if (cm < 50 || cm > 250) return (showError("cm", "Enter a height between 50 and 250 cm."), { valid: false, firstInvalid: fields.cm });
      }

      if (hasUK) {
        const ftV = ft ?? 0;
        const inV = inch ?? 0;

        if (!Number.isInteger(ftV) || ftV < 0) return (showError("ft", "Enter feet as a whole number (0 or more)."), { valid: false, firstInvalid: fields.ft });
        if (!Number.isInteger(inV) || inV < 0 || inV > 11) return (showError("inch", "Inches must be a whole number from 0 to 11."), { valid: false, firstInvalid: fields.inch });
        if (ftV === 0 && inV === 0) return (showError("ft", "Enter a height greater than 0."), { valid: false, firstInvalid: fields.ft });
        // reasonable range
        if (ftV > 8) return (showError("ft", "Enter a height between 1 and 8 ft."), { valid: false, firstInvalid: fields.ft });
      }

      return { valid: true, cm, ft, inch };
    }

    function calculate() {
      const v = validate();
      if (!v.valid) {
        setBlankResults();
        v.firstInvalid?.focus();
        return;
      }

      let cmOut = null;
      let ftOut = null;
      let inOut = null;

      if (v.cm !== null) {
        cmOut = v.cm;
        const totalIn = cmOut / 2.54;
        ftOut = Math.floor(totalIn / 12);
        inOut = Math.round(totalIn - ftOut * 12);
        if (inOut === 12) { ftOut += 1; inOut = 0; }
      } else {
        const ftV = v.ft ?? 0;
        const inV = v.inch ?? 0;
        const totalIn = ftV * 12 + inV;
        cmOut = totalIn * 2.54;
        ftOut = ftV;
        inOut = inV;
      }

      $("resCm").textContent = `${Math.round(cmOut)} cm`;
      $("resFtIn").textContent = `${ftOut} ft ${inOut} in`;
    }

    function reset() {
      ["cm","ft","inch"].forEach((k) => {
        fields[k].value = "";
        clearError(k);
      });
      setBlankResults();
      fields.cm?.focus();
    }

    ["cm","ft","inch"].forEach((k) => fields[k]?.addEventListener("input", () => clearError(k)));

    const calcBtn = $("calcBtn");
    const calcLabel = calcBtn?.querySelector("[data-calc-label]");
    const calcSpinner = calcBtn?.querySelector("[data-calc-spinner]");

    function setLoading(isLoading) {
      if (!calcBtn) return;
      calcBtn.disabled = isLoading;
      calcBtn.setAttribute("aria-busy", isLoading ? "true" : "false");
      calcBtn.classList.toggle("opacity-70", isLoading);
      calcBtn.classList.toggle("cursor-not-allowed", isLoading);
      calcSpinner?.classList.toggle("hidden", !isLoading);
      calcLabel?.classList.toggle("sr-only", isLoading);
    }

    calcBtn?.addEventListener("click", () => {
      if (calcBtn.disabled) return;
      setLoading(true);
      window.setTimeout(() => {
        calculate();
        setLoading(false);
      }, 1000);
    });
    $("resetBtn")?.addEventListener("click", reset);

    setBlankResults();
  </script>
</Layout>
